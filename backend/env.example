# ========================= Zentix AI Backend Environment Variables =========================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# JWT Secret Key (استبدلها بقيمة قوية في الإنتاج)
JWT_SECRET_KEY=zentix-ai-secret-key-2024-change-in-production

# Database Configuration (للمستقبل)
# DATABASE_URL=postgresql://username:password@localhost:5432/zentix_db
# REDIS_URL=redis://localhost:6379/0

# API Configuration
API_VERSION=v1
MAX_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/zentix.log

# CORS Origins (أضف عناوين الواجهة المسموحة)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AI System Configuration
ZERO_SYSTEM_LOG_FILE=logs/zero_interactions.jsonl
MAX_CHAT_HISTORY=50
EMOTION_ANALYSIS_ENABLED=True

# File Storage (للمستقبل)
UPLOAD_FOLDER=uploads/
MAX_FILE_SIZE=10MB

# Email Configuration (للإشعارات - المستقبل)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# External APIs (إذا كنت تستخدم APIs خارجية)
# OPENAI_API_KEY=your-openai-key
# GOOGLE_API_KEY=your-google-key

# Security
SESSION_TIMEOUT=24  # ساعات
PASSWORD_MIN_LENGTH=8
ENABLE_2FA=False

# Performance
CACHE_TIMEOUT=300  # ثواني
MAX_CONCURRENT_REQUESTS=50

# Monitoring
ENABLE_METRICS=True
HEALTH_CHECK_INTERVAL=60  # ثواني

# Development Only
DEV_ADMIN_USERNAME=admin
DEV_ADMIN_PASSWORD=admin123
DEV_USER_USERNAME=user
DEV_USER_PASSWORD=user123 