# ========================= Zentix AI Frontend Environment Variables =========================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_API_VERSION=v1

# App Configuration
NEXT_PUBLIC_APP_NAME=Zentix AI Dashboard
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_DESCRIPTION=Arabic Emotional AI - Powered by Zentix

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY=zentix_auth_token
NEXT_PUBLIC_SESSION_TIMEOUT=24  # ساعات

# Features
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_EMOTIONS=true
NEXT_PUBLIC_ENABLE_SKILLS=true
NEXT_PUBLIC_ENABLE_LIVE_DEMO=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_LANGUAGE=ar
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_RTL=true

# Real-time Features
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:5000/ws
NEXT_PUBLIC_AUTO_REFRESH_INTERVAL=30000  # milliseconds

# Monitoring and Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# External Services
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Development
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# API Endpoints
NEXT_PUBLIC_AUTH_ENDPOINT=/auth
NEXT_PUBLIC_DASHBOARD_ENDPOINT=/dashboard
NEXT_PUBLIC_EMOTIONS_ENDPOINT=/emotions
NEXT_PUBLIC_CHAT_ENDPOINT=/chat
NEXT_PUBLIC_SKILLS_ENDPOINT=/skills
NEXT_PUBLIC_SETTINGS_ENDPOINT=/settings

# Performance
NEXT_PUBLIC_API_TIMEOUT=10000  # milliseconds
NEXT_PUBLIC_MAX_RETRIES=3

# Demo Data
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_DEMO_USERNAME=user
NEXT_PUBLIC_DEMO_PASSWORD=user123 