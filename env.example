# 🔐 Zero System Environment Variables
# نسخ هذا الملف إلى .env وتحديث القيم

# Backend Configuration (Python/Flask)
FLASK_SECRET_KEY=your-super-secret-key-here-change-me
FLASK_ENV=development
FLASK_DEBUG=true

# AI System Settings
ZERO_SYSTEM_LOG_LEVEL=INFO
EMOTION_ANALYSIS_ENABLED=true
FRIENDSHIP_TRACKING_ENABLED=true

# Frontend Configuration (Next.js)
NEXT_PUBLIC_APP_NAME="Zero System"
NEXT_PUBLIC_API_URL=https://api.example.com
NEXT_PUBLIC_LANGUAGE=ar
NEXT_PUBLIC_RTL_ENABLED=true

# Development
DEV_MODE=true
LOG_LEVEL=DEBUG

